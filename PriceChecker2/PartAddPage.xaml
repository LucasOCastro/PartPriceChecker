<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PriceChecker2.PartAddPage"
             Title="Track new part">
    <VerticalStackLayout>
        <Entry x:Name="_partNameEntry" Placeholder="Name"/>

        <VerticalStackLayout Margin="20,0,0,0">
            <CollectionView x:Name="_entryColView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout>
                            <Entry Placeholder="URL" BindingContext="{Binding .}" Text="{Binding Value, Mode=TwoWay}"/>
                            <Button Text="-" Pressed="RemoveItem_Pressed" CommandParameter="{Binding Value}"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="+" Pressed="AddUrl_Pressed"/>
        </VerticalStackLayout>

        <Button Text="Save" Pressed="SaveButton_Pressed"/>

    </VerticalStackLayout>
</ContentPage>