<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:views="clr-namespace:PriceChecker2.Views"
             xmlns:parts="clr-namespace:PriceChecker2.Parts"
             x:DataType="parts:PartInfo"
             x:Name="self"
             x:Class="PriceChecker2.MainPage">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Button Text="TEST!"/>
        <CollectionView x:Name="_collectionView" Margin="0,10,0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:PartCard Part="{Binding .}" Margin="0,5,0,5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
