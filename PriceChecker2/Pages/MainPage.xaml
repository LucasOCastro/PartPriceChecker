<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:PriceChecker2.Views"
             xmlns:parts="clr-namespace:PriceChecker2.Parts"
             x:Name="self"
             x:Class="PriceChecker2.Pages.MainPage">

    <StackLayout Orientation="Vertical"
        Padding="30,0"
        Spacing="25">
        <CollectionView x:Name="_collectionView" Margin="0,10,0,10" VerticalOptions="FillAndExpand" BindingContext="{x:Reference self}" ItemsSource="{Binding _buildParts}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="parts:PartInfo">
                    <views:PartCard Part="{Binding .}" Margin="0,5,0,5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
